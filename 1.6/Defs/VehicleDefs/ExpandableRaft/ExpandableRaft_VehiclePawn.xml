<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<Vehicles.VehicleDef ParentName="BaseSeaVehiclePawnWithMap">
		<defName>MV_ExpandableRaft</defName>
		<label>raft</label>
		<description>TODO</description>

		<graphicData>
			<texPath>MapVehiclesOcean/Things/Raft/Raft</texPath>
			<graphicClass>Vehicles.Graphic_Vehicle</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>(4,4)</drawSize>
		</graphicData>

		<fillPercent>0.1</fillPercent>

		<buildDef>MV_ExpandableRaft_Blueprint</buildDef>

		<size>(3,3)</size>

		<vehicleCategory>Combat</vehicleCategory>
		<techLevel>Neolithic</techLevel>
		<vehicleType>Sea</vehicleType>

		<statBases>
			<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.2</ArmorRating_Sharp>
			<ArmorRating_Heat>0.4</ArmorRating_Heat>
			<Flammability>1.0</Flammability>
			<MarketValue>150</MarketValue>
		</statBases>

		<vehicleStats>
			<Mass>85</Mass>
			<MoveSpeed>0.11</MoveSpeed>
			<CargoCapacity>0</CargoCapacity>
			<RepairRate>1.75</RepairRate>
			<MaximumPayload>450</MaximumPayload>
		</vehicleStats>
		
		<combatPower>50</combatPower>

		<race>
			<baseBodySize>4</baseBodySize>
			<fleshType>WoodenVehicle</fleshType>
		</race>
		
		<enabled>Everyone</enabled>
		<properties>
			<manhunterTargetsVehicle>true</manhunterTargetsVehicle>
			<fishing>true</fishing>
			<winterSpeedMultiplier>1</winterSpeedMultiplier>
			<riverCost>1</riverCost>

			<track Class = "Vehicles.VehicleTrack_Wake">
				<speed>1</speed>
			</track>
		</properties>

		<components>
			<li>
				<key>Body</key>
				<label>Body</label>
				<health>450</health>
				<depth>External</depth>
				<hitbox>
					<side>Body</side>
				</hitbox>
			</li>
		</components>

		<comps>
			<li Class="VehicleMapFramework.CompProperties_RelatedBuildCommands"/>
			<li Class="VehicleMapFramework.CompProperties_RemoveSegmentGizmo"/>
			<li Class="VehicleMapFramework.CompProperties_DelayedKill">
				<message>VMF_BeginToSink</message>
				<effecterDef>MV_SinkSplash</effecterDef>
			</li>
			<li Class="VehicleMapFramework.CompProperties_NpcVehicleMap">
				<pawnCountWeight>0.8</pawnCountWeight>
				<mapParamsList>
					<li>
						<pawnCountRange>0~2</pawnCountRange>
						<prefabDef>MV_ExpandableRaft_PrefabA</prefabDef>
						<preferredDir>North</preferredDir>
					</li>
					<li>
						<pawnCountRange>3~</pawnCountRange>
						<prefabDef>MV_ExpandableRaft_PrefabB</prefabDef>
						<preferredDir>West</preferredDir>
					</li>
				</mapParamsList>
			</li>
		</comps>

		<modExtensions>
			<li Class="VehicleMapFramework.VehicleMapProps_Unique">
				<size>(25,25)</size>
				<expandableCellRects>
					<li>(0,0,24,10)</li>
					<li>(0,14,24,24)</li>
					<li>(0,11,10,13)</li>
					<li>(14,11,24,13)</li>
				</expandableCellRects>
			</li>
		</modExtensions>
	</Vehicles.VehicleDef>
</Defs>